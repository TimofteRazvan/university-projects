<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment_7l.ProgramChooserController">
    <children>
        <VBox alignment="CENTER" style="-fx-background-color: #434544;">
            <children>
                <ListView fx:id="programsListView" prefHeight="250.0" prefWidth="525.0" style="-fx-background-color: #d9c91e; -fx-background-radius: 5px;">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin></ListView>
                <Button fx:id="displayButton" alignment="BASELINE_CENTER" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#displayProgram" prefHeight="24.0" style="-fx-background-color: #ffffff; -fx-border-color: #000000; -fx-border-radius: 25px; -fx-background-radius: 15px;" text="DISPLAY" textAlignment="CENTER" textFill="#d9c91e">
                    <font>
                        <Font name="Times New Roman" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>